@model Deloitte_Training_Center.Models.User

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/registeruser.js" asp-append-version="true"></script>
 </head>
<h1>User Registration</h1>
<p>Create a new account.</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input type="password" id="password" asp-for="password" onkeyup="validate()" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirm Password</label>
                <input type="password" id ="confirmpassword" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="alertmessage" class="control-label"></label>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="registerbutton" class="button" type ="submit" hidden>Register</button>
            </div>
        </form>
    </div>
</div>

<div>
    <p>Already have an account? <a asp-action="Login">Log in</a></p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
